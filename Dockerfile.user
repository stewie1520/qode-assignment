FROM node:25-alpine AS base
RUN yarn global add corepack && corepack enable && corepack prepare pnpm@10.20.0 --activate
WORKDIR /app

FROM base AS deps
COPY pnpm-lock.yaml pnpm-workspace.yaml package.json ./
COPY apps/user-service/package.json ./apps/user-service/
COPY packages/config/package.json ./packages/config/
COPY packages/middlewares/package.json ./packages/middlewares/
RUN pnpm install --frozen-lockfile

FROM base AS builder
COPY --from=deps /app/node_modules ./node_modules
COPY --from=deps /app/apps/user-service/node_modules ./apps/user-service/node_modules
COPY --from=deps /app/packages/config/* ./packages/config/*
COPY --from=deps /app/packages/middlewares/node_modules ./packages/middlewares/node_modules

COPY pnpm-lock.yaml pnpm-workspace.yaml package.json turbo.json ./
COPY apps/user-service ./apps/user-service
COPY packages ./packages

## Dummy ENV to bypass the db:generate
ENV DATABASE_URL=postgresql://postgres:postgres@db:5432/photo_service
RUN pnpm --filter user-service db:generate
RUN pnpm --filter user-service build

FROM node:25-alpine AS runner
WORKDIR /app

ENV NODE_ENV=production
ENV PORT=3002

RUN addgroup --system --gid 1001 nodejs && \
    adduser --system --uid 1001 appuser

COPY --from=builder --chown=appuser:nodejs /app/apps/user-service/dist ./apps/user-service/dist
COPY --from=builder --chown=appuser:nodejs /app/node_modules ./node_modules
COPY --from=builder --chown=appuser:nodejs /app/apps/user-service/node_modules ./apps/user-service/node_modules
COPY apps/user-service/package.json ./apps/user-service/

USER appuser

EXPOSE 3002

CMD ["node", "apps/user-service/dist/index.mjs"]
# CMD ["npx", "http-server"]
